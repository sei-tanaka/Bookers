<h1>Editing Book</h1>

<% if @book.errors.any? %>
    <div id="error-edit">
      <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
    </div>
<% end %>

<%= form_with model: @book,url:book_path(@book), method: :patch do |f| %>

  <div>
    <label>Title</label>
    <div><%= f.text_field :title %></div>
  </div>
  
  <div>
    <label>Body</label>
    <div><%= f.text_area :body %></div>
  </div>
  
  <%= f.submit 'UpdateBook' %>

<% end %>

<%= link_to "Show",book_path(@book) %>
